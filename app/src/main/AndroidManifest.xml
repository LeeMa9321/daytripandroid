<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="leema.com.daytrip1">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BmiCalculator"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_bmi_calculator"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".GoalListPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_goal_list_page"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".AddNewGoal"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_add_new_goal"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity android:name=".SigninPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity">
        </activity>
        <activity
            android:name=".WorkoutListPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_workout_list_page"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".AddNewWorkout"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_add_new_workout"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity android:name=".IdeasListPage">
        </activity>
        <activity android:name=".AddNewIdea">
        </activity>
        <activity android:name=".AddNewMeal">
        </activity>
        <activity android:name=".MealListPage">
        </activity>
    </application>

</manifest>