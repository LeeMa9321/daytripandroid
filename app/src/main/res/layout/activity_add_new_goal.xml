<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                tools:context="leema.com.daytrip1.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textSize="50sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/rectangle"
        android:layout_width="411dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/header"/>

    <TextView
        android:id="@+id/goal_page_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rectangle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="New Goal"
        android:textSize="30sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_button"
                android:textColor="@android:color/transparent"
                android:textColorLink="@android:color/transparent"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/new_goal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Goal Name:"
        android:textColorLink="@android:color/transparent"
        android:textSize="24sp"
        android:layout_below="@+id/rectangle"
        android:layout_alignStart="@+id/goal_name_back"/>

    <ImageView
        android:id="@+id/goal_name_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_goal_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/numberbox"/>

    <EditText
        android:id="@+id/goal_name_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/goal_name_back"
        android:layout_alignTop="@+id/goal_name_back"
        android:layout_marginStart="9dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Enter Goal Name"
        android:inputType="textPersonName"
        android:textColorLink="@android:color/transparent"
        android:layout_alignBottom="@+id/goal_name_back"/>

    <ImageView
        android:id="@+id/summary_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/summarybox"
        android:layout_below="@+id/summar_goal"
        android:layout_alignStart="@+id/goal_name_back"/>

    <TextView
        android:id="@+id/summar_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Summary:"
        android:textSize="24sp"
        android:layout_below="@+id/goal_name_box"
        android:layout_alignStart="@+id/summary_box"/>

    <EditText
        android:id="@+id/summary_body"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Enter Summary Here"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColorLink="@android:color/transparent"
        android:textSize="16sp"
        android:layout_alignTop="@+id/summary_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/completion_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rectangle"
        android:layout_below="@+id/summary_box"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp"/>

    <ImageButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/savebutton"/>


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</RelativeLayout>

