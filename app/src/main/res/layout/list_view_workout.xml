<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/singleGoalContainer"
              android:layout_width="fill_parent"
              android:layout_height="175dp"
              android:background="@drawable/goal_container"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
        android:id="@+id/workout_box_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Name here"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/workout_box_reps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:text="Insert REps here"/>

    <TextView
        android:id="@+id/workout_box_weight"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Insert Weight here"/>

    <Button
        android:id="@+id/delete_button_workout"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_red_dark"
        android:text="Delete"/>

</LinearLayout>