<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="leema.com.daytrip1.SigninPage">

    <EditText
        android:id="@+id/email"
        android:layout_width="335dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/password_textview"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="337dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="109dp"
        android:layout_marginBottom="37dp"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:layout_above="@+id/login_button"
        android:layout_alignStart="@+id/email"/>

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_above="@+id/email"
        android:layout_alignStart="@+id/email"/>

    <TextView
        android:id="@+id/password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignStart="@+id/password"
        android:text="Password:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="92dp"/>

    <Button
        android:id="@+id/login_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        android:text="Login"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        tools:layout_editor_absoluteX="285dp"
        tools:layout_editor_absoluteY="154dp"
        android:onClick="signInExistingUser"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/google_login"
        android:layout_alignEnd="@+id/password"/>

    <Button
        android:id="@+id/google_login"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:background="@drawable/common_google_signin_btn_text_dark"
        android:text="Login with Google"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="260dp"
        android:layout_marginBottom="221dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/register"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="66dp"
        android:background="@android:color/holo_green_dark"
        android:text="Register"
        android:onClick="registerNewUser"
        android:layout_alignEnd="@+id/google_login"
        android:layout_alignStart="@+id/google_login"/>

</RelativeLayout>
